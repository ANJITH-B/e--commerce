        {{#each products}}
        <div class="card mt-3 card-sm" style="max-width: 100vw;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./product-images/{{this._id}}.jpg" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">{{this.Name}}</h5>
                <p class="card-text fs-6">{{this.description}}</p>
                <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
