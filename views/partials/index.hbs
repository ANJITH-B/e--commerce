<section>
    <div class="container ms-5 mt-5">
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-4 ">
            {{#each products}}
            <div class="col-md-4 ">
                <div class="card h-100">
                    <img src='/product-images/{{this._id}}.jpg' class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>