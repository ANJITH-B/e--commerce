<section>
    <div class="container mt-5">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">category</th>
                    <th scope="col">description</th>
                    <th scope="col">image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; hegith: 50%;" src='/product-images/{{this._id}}.jpg' alt="..."></td>
                    <td><a href="admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm"  >Edit</a>
                        <a href="admin/delete-product?id={{this._id}}" class="btn btn-danger btn-sm"  >delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>