<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-5">
                <h2 class="text-center">Edit product</h2>
                <form enctype="multipart/form-data" action="/admin/edit-product/{{product._id}}" method="post">
                    <label for="">Name</label>
                    <input type="text" name="Name" value="{{product.Name}}" class="form-control">

                    <label for="">category</label>
                    <input type="text" name="Category" value="{{product.Category}}" class="form-control">

                    <label for="">description</label>
                    <input type="text" name="description" value="{{product.description}}" class="form-control">

                    <label for="">Image</label>
                    <img src="/product-images/{{product._id}}.jpg"  alt="current image" class=" rounded-4" style="width: 10rem;">
                    <input type="file"  class="form-control" name="Image">
                    <button type="submit" class="btn btn-success mt-3">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>